{% comment %}
  Company Values Section
  Displays key company principles with numbered items and descriptions
{% endcomment %}

<section class="company-values py-16 bg-gray-50">
  <div class="page-width mx-auto px-4 max-w-6xl">
    {% if section.settings.heading != blank %}
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {{ section.settings.heading }}
        </h2>
        {% if section.settings.subheading != blank %}
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12">
      {% for block in section.blocks %}
        <div class="value-item flex items-start space-x-6 group" {{ block.shopify_attributes }}>
          <div class="text-number">
            <div class="w-16 h-16 bg-blue-600 text-white rounded-lg flex items-center justify-center text-2xl font-bold group-hover:bg-blue-700 transition-colors duration-300">
              {{ block.settings.number | default: forloop.index | sprintf: "%02d" }}
            </div>
          </div>
          
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors duration-300">
              {{ block.settings.title }}
            </h3>
            
            {% if block.settings.description != blank %}
              <p class="text-gray-600 leading-relaxed">
                {{ block.settings.description }}
              </p>
            {% endif %}
            
            {% if block.settings.link_url != blank and block.settings.link_text != blank %}
              <a href="{{ block.settings.link_url }}" 
                 class="inline-flex items-center mt-4 text-blue-600 hover:text-blue-700 font-medium transition-colors duration-300">
                {{ block.settings.link_text }}
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>

        {% unless forloop.last %}
          <div class="hidden md:block md:col-span-2">
            <hr class="border-gray-200 my-8">
          </div>
        {% endunless %}
      {% endfor %}
    </div>
  </div>
</section>

<style>


  .value-item {
    padding: 2rem;
    background: white;
    border-radius: 0px;
    transition: all 0.3s ease;
    border: 1px solid transparent;
        max-width: 576px;
    margin-inline: auto;
    border-bottom: 1px solid;
    display: flex;
    align-items: center;
  }
  .text-number {
        width: 135px;
    font-size: 39px;
    min-width: 135px;
    font-family: var(--font-heading-family);
}
  
.company-values .grid  {
flex-direction : column;
}
.value-item  .flex-1 .text-xl{
    margin: 0;
    font-size: 23px;
}

  @media (max-width: 768px) {
    .company-values {
      padding: 3rem 0;
    }
    .text-number {
    width: 70px;
    font-size: 39px;
    min-width: 70px;
    font-family: var(--font-heading-family);
}
    .value-item {
      padding: 1.5rem;
      margin-bottom: 1.5rem;
    }
    
    .value-item:hover {
      transform: none;
    }
  }

  .container {
    max-width: 1200px;
  }
</style>

