

<section class="custom-banner-section" style="
  --desktop-height: {{ section.settings.desktop_height }}px;
  --mobile-height: {{ section.settings.mobile_height }}px;
  background-image: url({{ section.settings.background_image | image_url: width: 1920 }});
">
  <div class="custom-banner-content">
    <h1>{{ section.settings.heading }}</h1>
    {% if section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="banner-button large-up-hide medium-up-hide">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
  {% if section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="banner-button small-hide">{{ section.settings.button_text }}</a>
    {% endif %}
</section>

<style>
  .custom-banner-section {
  background-size: cover;
  background-position: center;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  height: var(--desktop-height);
  position: relative;
  padding: 20px;
  transition: height 0.3s ease;
}

.custom-banner-section::before {
  content: "";
  position: absolute;
  inset: 0;
  background-color: rgba(0, 0, 0, 0.4); /* Dark overlay */
  z-index: 0;
}

.custom-banner-content {
  position: relative;
  z-index: 1;
  max-width: 90%;
}

.custom-banner-content h1 {
  font-size: 6rem;
  margin: 0rem;
  /* font-weight: 500; */
  color : #fff;
}

.banner-button {
  background: white;
  color: black;
  padding: 10px 20px;
  text-decoration: none;
  /* font-weight: bold; */
  border: none;
  cursor: pointer;
  display: inline-block;
  transition: all 0.2s ease;
}

.banner-button:hover {
  background: black;
  color: white;
}
@media (min-width:769px) {
  .banner-button {
    transform: translatex(-50%);
    position: absolute;
    bottom: 3rem;
    left: 50%;
  }
}
/* Responsive height */
@media (max-width: 767px) {
  .custom-banner-section {
    height: var(--mobile-height);
  }

  .custom-banner-content h1 {
    font-size: 1.8rem;
  }
}

</style>
{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Discover the Merchery products"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Know more"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "min": 300,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Desktop height",
      "default": 600
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Mobile height",
      "default": 400
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}