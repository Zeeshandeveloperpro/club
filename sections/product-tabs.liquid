    padding-bottom: 0;
  }

  .z_products_upsell .button--full-width::after {
    content: unset !important;
    ;
  }

  .z_products_upsell .button--full-width {
    margin: 0;
    background: unset;
    min-height: unset;
    height: unset;
    width: fit-content;
