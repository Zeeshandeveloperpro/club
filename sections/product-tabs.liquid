    display: none;
    /* visibility: hidden; */
  }

  .z_tab_content:first-child {
    opacity: 1;
    /* visibility: visible; */
    display: block;
  }

  .z_tab_button {
    position: relative;
  }

  .z_tab_button::after {
    content: "";
    position: absolute;
    bottom: 0;
    width: 100%;
    border-radius: inherit;
    opacity: 0;
    transform: scale(.9);
    transition: opacity .6s ease, transform .6s ease;
    border-bottom: 6px solid #777;
    left: 0;
  }

  .z_active_tab::after {
    opacity: 1;
    transform: scale(1);
  }

  .z_specs_grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
  }

  span.z_spec_value {
