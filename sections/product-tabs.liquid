<script src="{{ 'product-tabs.js' | asset_url }}"> ></script>

<div class="z_product_tabs">
  <div class="z_product_tabs_inner">
    <div class="page-width">
      <div class="z_flex_parent">
        <div class="z_flex_tabs_container">
          <div class="z_flex_tabs_button ">
            <div class="z_flex_grid">
              {%- for block in section.blocks -%}
              {%- case block.type -%}
              {%- when 'Description' -%}
              {%- if block.settings.z_text_heading != blank and product.description != blank -%} <button
                class="z_tab_button " index="{{ forloop.index }}">{{ block.settings.z_text_heading }}</button>
              {%- endif -%}
              {%- when 'Text' -%}
              {%- if block.settings.z_text_heading != blank and block.settings.z_rich_text != blank -%} <button
                class="z_tab_button " index="{{ forloop.index }}">{{ block.settings.z_text_heading }}</button>
              {%- endif -%}

              {%- endcase -%}
              {%- endfor -%}
            </div>
          </div>
          <div class="z_tabs_content ">
            <div class="">
              {% for block in section.blocks %}
              {% case block.type %}
              {% when 'Description' %}
              <div class="z_tab_content  " content-index="{{ forloop.index }}">
                {{ product.description }}
              </div>
              {% when 'Text' %}
              <div class="z_tab_content " content-index="{{ forloop.index }}">
                {{ block.settings.z_rich_text }}</div>

              {% endcase %}
              {% endfor %}
            </div>
          </div>


        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .z_product_tabs_inner {
    padding: 20px;
    /* margin-left:10em; */
    /* margin-right:10em; */
    background: #fefbf2;
    padding: 20px;
  }

