    padding-bottom: 24px;
  }

  .z_tab_content {
    font-size: 14px;
    letter-spacing: 0;
    line-height: 24px;
    color: #222222;
  }

  .z_mobile_mobile {
    display: none;
  }

  @media (max-width:989px) {

    .z_flex_parent {
      flex-direction: column;
      gap: 20px;
    }

    .z_products_upsell {
      width: 100%;
    }

    .z_products_upsell {
      width: 100%;
    }

    .z_product_tabs_inner {
      margin-top: 40px;
      margin-bottom: 40px;
    }

    .z_tab_button::after {
      content: unset;
    }

    .z_accordian_parent {
      border-top: 1px solid #dedede;
    }

    .z_specs_grid {
      grid-template-columns: 1fr 1fr;
    }

    .z_tab_content {

      overflow: hidden;
      transition: 0.5s all ease-in-out;
    }

    .z_accordian_parent:first-child .z_tab_content {
      max-height: fit-content;
    }

    .z_active_tab_accordian svg {
      transform: rotate(-180deg);
    }

    #shopify-section-template--17718062547163__multi_column_v2_j9KWVP .title-wrapper-with-link .inline-richtext {
