    padding: 33px;
    border-radius: 5px;
  }

  .z_flex_parent {
    display: flex;
    /* align-items:center; */
    gap: 80px;
  }

  .z_flex_tabs_container {
    width: 100%;

  }

  .z_products_upsell {
    width: 50%;
    display: grid;
    grid-auto-flow: column;
    gap: 8px;
  }

  .z_flex_parent .card-wrapper {
    background: unset !important;
  }

  .z_tab_button {
    width: fit-content;
    width: fit-content;
    background: unset;
    border: none;
    outline: none;
    padding: 0;
    font-size: 13px;
    letter-spacing: 1px;
    font-weight: 600;
