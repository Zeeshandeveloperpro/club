  "settings": [
    {
      "type": "text",
      "id": "heading_before",
      "label": "Text before hover word",
      "default": "We personalise the most beautiful and"
    },
    {
      "type": "text",
      "id": "hover_word",
      "label": "Hover word",
      "default": "sustainable"
    },
    {
      "type": "text",
      "id": "heading_after",
      "label": "Text after hover word",
      "default": "products for your brand to shine in real life."
    },
    {
      "type": "text",
      "id": "learn_more_text",
      "label": "Circle text",
      "default": "LEARN\nMORE"
    },
    {
      "type": "url",
      "label": "Url hover button",
      "id": "url_hover_button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "CTA Button Label",
      "default": "View all products"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "CTA Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero with Hover Circle",
      "category": "Hero"
    }
  ]
}
{% endschema %}