{{ 'text-with-images-slider.css' | asset_url | stylesheet_tag }}

{% assign block_images = section.blocks | where : 'type' , 'images_block' | size %}

<div class="text-with-images__slider" {{ block_images }}>
  <div class="text-with-images__wrapper">
    <div class="text-with-images__grid">
      <div class="text-with-images__info">
        <div class="text-with-images__info_upper">
        
        {% if section.settings.heading != blank %}
          <h1 class="text-with-images__heading">
            {{ section.settings.heading }}
          </h1>
          {% endif %}
          <div class="text-with-images__buttons">
            {% if section.settings.button_1 != blank %}
              <a href="{{ section.settings.url_1 }}" class="button" >
                {{ section.settings.button_1 }}
              </a>
            {% endif %}
            {% if section.settings.button_2 != blank %}
              <a href="{{ section.settings.button_2 }}" class="button" >
                {{ section.settings.button_2 }}
              </a>
            {% endif %}
          </div>
          </div>
      </div>
      {% if block_images > 0 %}
      <div class="text-with-images__images">
        <div class="swiper">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="text-with-images__container">
                <div class="text-with-imges__img {% if block.settings.overlay %} img_ovelay {% endif %}">
                  {%  if block.settings.video  != blank%}
                              {{
                      block.settings.video
                      | video_tag:
                        image_size: '1100x',
                        autoplay: true,
                        loop: true,
                        controls: false,
                        muted: true
                    }}
        {% elsif block.settings.image != blank %}
                    <img src="{{ block.settings.image | img_url : 'master' }}" class="" width="100%" />
                  {% endif %}
                </div>
                <div class="text-with-images_block__info">
                  <span class="text-with-images_block_heading">{{ block.settings.heading }}</span>
                  <span class="text-with-images_block_subheading"> {{ block.settings.subheading }}</span>
                </div>
              </div>
            </div>
            {% endfor %}
          </div>
          <div class="swiper-pagination"></div>
          <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
        </div>
      </div>
        {% endif %}
    </div>
  </div>
  
</div>
<style>
  #shopify-section-{{section.id}} {
    background-color : {{section.settings.bg_color}};
  }
#shopify-section-{{section.id}} .swiper-pagination-bullet-active {
  background:white;
}
  
</style>
 <script>
   document.addEventListener("DOMContentLoaded", function() {
    var swiper = new Swiper(".text-with-images__images .swiper", {
      loop : true,
      navigation: {
        nextEl: ".text-with-images__images .swiper-button-next",
        prevEl: ".text-with-images__images .swiper-button-prev",
      },
      pagination: {
        el: ".text-with-images__images .swiper-pagination",
        clickable: true
      },
    });
       });
  </script>
{% schema %}
  {
    "name": "text-with-images-slider",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default" : "#efeae2"
      },
      {
        "type": "text",
        "label": "Heading",
        "id": "heading",
        "default" : "Good merch, for good brands."
      },
      {
        "type": "header",
        "content": "buttons"
      },
      {
        "type": "text",
        "id": "button_1",
        "label": "Button 1",
        "default" : "Shop all products"
      },
      {
        "type": "url",
        "id": "url_1",
        "label": "Url"
      },
      {
        "type": "text",
        "id": "button_2",
        "label": "Button 2",
        "default" : "Talk to our team"
      },
      {
        "type": "url",
        "id": "url_2",
        "label": "Url"
      }
    ],
    "blocks": [
      {
        "type": "images_block",
        "name" : "Block",
        "settings": [
          {
              "type": "video",
              "id": "video",
              "label": "t:sections.video.settings.video.label"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "text",
            "id": "subheading",
            "label": "Sub heading",
            "default" : "Soeur Paris"
          },
          {
            "type": "checkbox",
            "id": "overlay",
            "label" : "Overlay",
            "default" : true
          }
        ]
      }
    ],
    "presets": [
      {
        "name" : "text-with-images-slider"
      }
      
    ]
  }
{% endschema %}